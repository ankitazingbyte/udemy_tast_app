<div class="row">
  <div class= "col-xs-8 col-xs-offset-2">
    <div class= "well well-lg">
      <% obj.each do |article| %>
        <div class= "article-title">
            <%= link_to article.title, article_path(article) %>
        </div>

        <div class= "article-body">
            <%= truncate(article.description, length: 100) %>
            <div class= "article-meta-details">
              <small>Created by: <%= article.user.username if article.user %>,
                <%= time_ago_in_words(article.created_at) %> ago,
                last updated: <%= time_ago_in_words(article.updated_at) %>ago
                
              </small>
            </div>
        </div>

        <div class="article-action">
            <%= link_to 'Edit this atricle', edit_article_path(article), class: "btn btn-xs btn-primary" %> 
            <%= link_to 'delete this article', article_path(article), method: :delete, data: {conforim: "Are you sure u want to delete this article?"}, class: "btn btn-xs btn-danger" %>
            <%= link_to 'view all articles', articles_path, class: "btn btn-xs btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<br>

<%= link_to 'New Article', new_article_path %>
